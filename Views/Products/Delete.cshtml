@model GummiBearKingdom.Models.Product

<h1 class="product-delete-header">Delete</h1>

<div class="delete-form-container">

    <p>Are you sure you want to delete this product?</p>

    <strong>@Model.Name</strong>

    <form asp-controller="Products" asp-action="Delete" method="post">
        <input hidden asp-for="@Model.Id" />
        <button class="delete-button" type="submit">Confirm Deletion</button>
    </form>
</div>

<a href="/Products/Details/@Model.Id" class="return-link">Return to Product</a>
